<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_card_creator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cyanoboru.grabmycard.cardCreator"
    android:background="@drawable/ic_troll"
    android:backgroundTint="#90000000"
    android:backgroundTintMode="src_atop">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                app:srcCompat="@drawable/ic_person_outline_black_24dp"
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:tint="@color/icons"
                android:background="#20000000"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your name"
                android:textColorHint="@color/icons" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                app:srcCompat="@drawable/ic_call_black_24dp"
                android:id="@+id/imageView2"
                android:tint="@color/icons"
                android:background="#20000000"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your phone number *"
                android:textColorHint="@color/icons" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                app:srcCompat="@drawable/ic_mail_black_24dp"
                android:id="@+id/imageView2"
                android:tint="@color/icons"
                android:background="#20000000"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your email"
                android:textColorHint="@color/icons" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                app:srcCompat="@drawable/ic_public_black_24dp"
                android:id="@+id/imageView2"
                android:tint="@color/icons"
                android:background="#20000000"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your web *"
                android:textColorHint="@color/icons" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                app:srcCompat="@drawable/ic_instagram"
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:tint="@color/icons"
                android:background="#20000000"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your Instagram *"
                android:textColorHint="@color/icons" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                app:srcCompat="@drawable/ic_twitter"
                android:id="@+id/imageView2"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your Twitter *"
                android:textColorHint="@color/icons" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                app:srcCompat="@drawable/ic_facebook"
                android:id="@+id/imageView2"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:fontFamily="sans-serif-light"
                android:layout_weight="1"
                android:padding="8dp"
                android:background="?android:attr/editTextBackground"
                android:backgroundTint="@color/icons"
                android:textColor="@color/icons"
                android:textColorLink="?android:attr/colorPrimary"
                android:hint="Your Facebook *"
                android:textColorHint="@color/icons" />

        </LinearLayout>

        <TextView
            android:text="* Optional fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/icons"
            android:layout_marginLeft="16dp" />
    </LinearLayout>
</RelativeLayout>
